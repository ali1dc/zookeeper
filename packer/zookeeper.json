{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "ami-43a15f3e",
    "instance_type": "m5.xlarge",
    "ssh_username": "ubuntu",
    "ssh_timeout": "5m",
    "ami_name": "zookeeper-{{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": ["./cookbooks/vendor-cookbooks/"],
      "run_list": ["java::default", "zookeeper-config::default"],
      "json": { "foo": "bar" },
      "prevent_sudo": false,
      "skip_install": false
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}
