{
  "variables": {
    "zk_1_ip": "172.31.64.200",
    "zk_2_ip": "172.31.48.200",
    "zk_3_ip": "172.31.0.200"
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "ami-43a15f3e",
    "instance_type": "m5.xlarge",
    "ssh_username": "ubuntu",
    "ssh_timeout": "5m",
    "ami_name": "zookeeper-{{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": ["./cookbooks/vendor-cookbooks/"],
      "run_list": ["java::default", "zookeeper-config::default"],
      "json": {
        "zookeeper": {
          "node_1": {
            "ip": "{{ user `zk_1_ip` }}"
          },
          "node_2": {
            "ip": "{{ user `zk_2_ip` }}"
          },
          "node_3": {
            "ip": "{{ user `zk_3_ip` }}"
          }
        }
      },
      "prevent_sudo": false,
      "skip_install": false
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}
