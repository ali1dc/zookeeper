{
  "variables": {
    "source_ami": "",
    "ami_name": "zookeeper-{{timestamp}}",
    "zk_1_ip": "10.100.1.100",
    "zk_2_ip": "10.100.2.100",
    "zk_3_ip": "10.100.3.100",
    "vpc_id": "",
    "subnet_id": "",
    "security_group_id": "",
    "region": "us-east-1"
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "{{user `region`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "m4.2xlarge",
    "ssh_username": "ubuntu",
    "ssh_timeout": "5m",
    "ami_name": "{{user `ami_name`}}"
  }],
  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": ["./cookbooks/vendor-cookbooks/"],
      "run_list": ["java::default", "zookeeper-config::default"],
      "json": {
        "zookeeper": {
          "node_1": {
            "ip": "{{ user `zk_1_ip` }}"
          },
          "node_2": {
            "ip": "{{ user `zk_2_ip` }}"
          },
          "node_3": {
            "ip": "{{ user `zk_3_ip` }}"
          }
        }
      },
      "prevent_sudo": false,
      "skip_install": false
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}
